{
	"compilerOptions": {
		"module": "ESNext",
		"target": "ESNext",
		"lib": [
			"esnext",
			"dom"
		],
		"moduleResolution": "NodeNext",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"removeComments": true
		// 编译输出文件中是否删除源文件中的注释
	},
	"include": [
		"types/**/*.d.ts"
	]
}
